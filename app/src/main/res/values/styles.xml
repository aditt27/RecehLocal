<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
        <item name="actionBarStyle">@style/AppBarStyle</item>
        <item name="alertDialogTheme">@style/NavigationAlertDialogStyle</item>
    </style>

    <style name="NavigationAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#5c6bc0</item>
    </style>

    <!-- App bar style -->
    <style name="AppBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>

    <style name="MainTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextColor">?attr/colorAccent</item>
    </style>

    <style name="EditTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorSecondaryAccent</item>
    </style>

    <style name="DetailTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorSecondaryAccent</item>
        <item name="actionBarStyle">@style/AppBarStyle</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
        <item name="actionBarStyle">@style/AppBarStyle</item>
        <item name="alertDialogTheme">@style/NavigationAlertDialogStyle</item>
    </style>
</resources>
